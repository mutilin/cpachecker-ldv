<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="1800" memlimit="1200">
  <option name="-setprop">output.disable=true</option>
  <option name="-config">test/config/bmc.properties</option>
  <option name="-heap">1200m</option>

  <test name="k1">
    <sourcefiles>
      <includesfile>test/test-sets/locks.set</includesfile>
      <includesfile>test/test-sets/ntdrivers-simplified.set</includesfile>
      <includesfile>test/test-sets/ntdrivers.set</includesfile>
      <includesfile>test/test-sets/ssh-simplified.set</includesfile>
      <includesfile>test/test-sets/ssh.set</includesfile>
      <includesfile>test/test-sets/systemc.set</includesfile>
    </sourcefiles>
    <option name="-setprop">cpa.loopstack.maxLoopIterations=1</option>
  </test>
  
  <test name="k10">
    <sourcefiles>
      <includesfile>test/test-sets/locks.set</includesfile>
      <includesfile>test/test-sets/ntdrivers-simplified.set</includesfile>
      <includesfile>test/test-sets/ntdrivers.set</includesfile>
      <includesfile>test/test-sets/ssh-simplified.set</includesfile>
      <includesfile>test/test-sets/ssh.set</includesfile>
      <includesfile>test/test-sets/systemc.set</includesfile>
    </sourcefiles>
    <option name="-setprop">cpa.loopstack.maxLoopIterations=10</option>
  </test>
 
  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="reached">reached set</column>
    <column title="targets">target elements</column>
    <column title="sat check time">final sat check</column>
    <column title="assertions check time">bounding assertions check</column>
  </columns>
</benchmark>
