<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="60" hardtimelimit="90" memlimit="500" cpuCores="1">

  <option name="-noout"/>
  <option name="-stator"/>

  <rundefinition>
    <!-- Integer Tests -->
    <sourcefiles>
        <include>../programs/stator/*.c</include>
    </sourcefiles>
</rundefinition>

<columns>
    <column title="total">Total time for CPA algorithm</column>
    <column title="policy propagation time">Time spent in policy propagation</column>
    <column title="value determination time">Time spent in value determination solver</column>
    <column title="value determination solver calls">Number of calls to the value determination solver</column>
    <column title="merge time">Time for merge operator</column>
    <column title="memory time">Time spent in memory analysis</column>
</columns>
</benchmark>
