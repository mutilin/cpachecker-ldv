<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="900" hardtimelimit="1000" memlimit="15000" cpuCores="4">
  <option name="-noout"/>
  <option name="-spec">sv-comp</option>
  <option name="-disable-java-assertions"/>
  <option name="-heap">13000M</option>
  
  <sourcefiles name="BitVectors">
    <includesfile>../programs/benchmarks/BitVectors.set</includesfile>
  </sourcefiles>
  <sourcefiles name="ControlFlowInteger-MemPrecise">
    <includesfile>../programs/benchmarks/ControlFlowInteger-MemPrecise.set</includesfile>
  </sourcefiles>
  <sourcefiles name="ControlFlowInteger-MemSimple">
    <includesfile>../programs/benchmarks/ControlFlowInteger-MemSimple.set</includesfile>
  </sourcefiles>
  <sourcefiles name="DeviceDrivers64">
    <includesfile>../programs/benchmarks/DeviceDrivers64.set</includesfile>
    <option name="-64"/>
  </sourcefiles>
  <sourcefiles name="FeatureChecks">
    <includesfile>../programs/benchmarks/FeatureChecks.set</includesfile>
  </sourcefiles>
  <sourcefiles name="HeapManipulation">
    <includesfile>../programs/benchmarks/HeapManipulation.set</includesfile>
  </sourcefiles>
  <sourcefiles name="Loops">
    <includesfile>../programs/benchmarks/Loops.set</includesfile>
  </sourcefiles>
  <sourcefiles name="ProductLines">
    <includesfile>../programs/benchmarks/ProductLines.set</includesfile>
  </sourcefiles>
  <sourcefiles name="SystemC">
    <includesfile>../programs/benchmarks/SystemC.set</includesfile>
    <!-- The following files are expected to have timeouts anyway. -->
    <exclude>../programs/benchmarks/systemc/mem_slave_tlm.3_safe.cil.c</exclude>
    <exclude>../programs/benchmarks/systemc/mem_slave_tlm.4_safe.cil.c</exclude>
    <exclude>../programs/benchmarks/systemc/mem_slave_tlm.5_safe.cil.c</exclude>
    <exclude>../programs/benchmarks/systemc/token_ring.10_safe.cil.c</exclude>
    <exclude>../programs/benchmarks/systemc/token_ring.11_safe.cil.c</exclude>
    <exclude>../programs/benchmarks/systemc/token_ring.12_safe.cil.c</exclude>
    <exclude>../programs/benchmarks/systemc/token_ring.13_safe.cil.c</exclude>
  </sourcefiles>

  <rundefinition name="ABEl">
    <option name="-predicateAnalysis-PredAbsRefiner-ABEl"/>
  </rundefinition>

  <rundefinition name="ABElf">
    <option name="-predicateAnalysis-PredAbsRefiner-ABElf"/>
  </rundefinition>
</benchmark>
