<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="180" memlimit="14000">
  <test name="explicit">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions.set</includesfile>
    </sourcefiles>
    <option name="-config">test/config/explicitAnalysis.properties</option>
    <option name="-setprop">output.disable=true</option>
    <option name="-heap">12000m</option>
  </test>
  <test name="adjustable-conditions-pl">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions.set</includesfile>
    </sourcefiles>
    <option name="-config">test/config/explicit-adjustableConditions.properties</option>
    <option name="-setprop">output.disable=true</option>
    <option name="-setprop">cpa.assumptions.progressobserver.heuristics=PathLengthHeuristics,TimeOutHeuristics</option>
    <option name="-heap">12000m</option>
  </test>
  <test name="adjustable-conditions-rip">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions.set</includesfile>
    </sourcefiles>
    <option name="-config">test/config/explicit-adjustableConditions.properties</option>
    <option name="-setprop">output.disable=true</option>
    <option name="-setprop">cpa.assumptions.progressobserver.heuristics=RepetitionsInPathHeuristics,TimeOutHeuristics</option>
    <option name="-heap">12000m</option>
  </test>
  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="reached">Size of reached set</column>
    <column title="threshold">Threshold value</column>
  </columns>
</benchmark>
