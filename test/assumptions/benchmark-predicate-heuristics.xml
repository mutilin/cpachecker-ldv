<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="900" memlimit="14000">
  <test name="sbe-heuristic">
    <sourcefiles><include>test/programs/nondet_init_programs/systemc/transmitter.02.BUG.cil.c</include></sourcefiles>
    <option name="-setprop">output.disable=true</option>
    <option name="-config">test/config/symbpredabsCPA-sbe-heuristics.properties</option>
    <option name="-setprop">ProgressObserverCPA.cpa.assumptions.progressobserver.heuristics=RepetitionsInPathHeuristics</option>
    <option name="-setprop">RepetitionsInPathHeuristics.threshold=3</option>
    <option name="-heap">12000m</option>
  </test>
  <test name="sbe-heuristic">
    <sourcefiles><include>test/programs/nondet_init_programs/systemc/transmitter.03.BUG.cil.c</include></sourcefiles>
    <option name="-setprop">output.disable=true</option>
    <option name="-config">test/config/symbpredabsCPA-sbe-heuristics.properties</option>
    <option name="-setprop">ProgressObserverCPA.cpa.assumptions.progressobserver.heuristics=RepetitionsInPathHeuristics</option>
    <option name="-setprop">RepetitionsInPathHeuristics.threshold=4</option>
    <option name="-heap">12000m</option>
  </test>
  <test name="sbe">
    <sourcefiles>
      <include>test/programs/nondet_init_programs/systemc/transmitter.02.BUG.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/transmitter.03.BUG.cil.c</include>
    </sourcefiles>
    <option name="-setprop">output.disable=true</option>
    <option name="-config">test/config/symbpredabsCPA-sbe.properties</option>
    <option name="-heap">12000m</option>
  </test>
  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="reached">reached set</column>
    <column title="abstractions">Number of abstractions</column>
    <column title="refinements">Number of refinements</column>
  </columns>
</benchmark>
