<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="10" memlimit="2048">

  <test name="some testfiles">
    <sourcefiles>
      <include>test/programs/simple/b*.cil.c</include>
      <exclude>test/programs/simple/*cor*.cil.c</exclude>
    </sourcefiles>
    <sourcefiles>
      <includesfile>test/test-sets/benchmark-lbe.set</includesfile>
      <exclude>test/programs/*simpli*/*</exclude>
    </sourcefiles>
    <options>
      <option name="-setprop">output.disable=true</option>
      <option name="-heap">100m</option>
      <option name="-config">test/config/symbpredabsCPA.properties</option>
    </options>
  </test>

  <test name="more files">
    <sourcefiles>
      <include>test/programs/simple/goto*.cil.c</include>
    </sourcefiles>
    <options>
      <option name="-setprop">output.disable=true</option>
      <option name="-config">test/config/symbpredabsCPA.properties</option>
      <option name="-heap">100m</option>
    </options>
  </test>

  <columns>
    <column title="total" digitsBehindComma="2">time for CPAchecker</column>
    <column title="reached">reached set</column>
    <column title="refinements">Number of refinements</column>
    <column title="abstractions">Number of abstractions</column>
  </columns>

</benchmark>
