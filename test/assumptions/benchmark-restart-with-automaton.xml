<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="900" memlimit="14000">
  <test name="lbe-tests">
    <sourcefiles>
      <include>test/programs/nondet_init_programs/systemc/token_ring*.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/mem_slave_tlm.*.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/toy.cil.c</include>
    </sourcefiles>
    <option name="-config">test/config/symbpredabsCPA-lbe.properties</option>
    <option name="-setprop">analysis.useCBMC=true</option>
    <option name="-setprop">counterexample.continueAfterInfeasibleError=true</option>
    <option name="-setprop">output.disable=true</option>
    <option name="-heap">4000m</option>
  </test>
  
  <test name="explicit-tests">
    <sourcefiles>
      <include>test/programs/nondet_init_programs/systemc/token_ring*.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/mem_slave_tlm.*.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/toy.cil.c</include>
    </sourcefiles>
    <option name="-config">test/config/explicitAnalysis.properties</option>
    <option name="-setprop">output.disable=true</option>
    <option name="-heap">12000m</option>
  </test>

  <test name="restart-with-automaton-tests">
    <sourcefiles>
      <include>test/programs/nondet_init_programs/systemc/token_ring*.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/mem_slave_tlm.*.cil.c</include>
      <include>test/programs/nondet_init_programs/systemc/toy.cil.c</include>
    </sourcefiles>
    <option name="-config">test/config/restartWithAssumptionAutomaton.properties</option>
    <option name="-setprop">output.disable=true</option>
    <option name="-heap">4000m</option>
  </test>
  <columns>
    <column title="total">time for CPAchecker</column>
  </columns>
</benchmark>