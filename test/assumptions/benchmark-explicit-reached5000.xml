<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="900" memlimit="12000">
  <test>
    <sourcefiles>test/programs/*-simplified/*.cil.c</sourcefiles>
    <sourcefiles>test/programs/systemc/[bk]*.cil.c</sourcefiles>
    <sourcefiles>test/programs/systemc/mem_slave_tlm.1.cil.c</sourcefiles>
    <sourcefiles>test/programs/systemc/pc_sfifo_?.cil.c</sourcefiles>
    <sourcefiles>test/programs/systemc/token_ring.0[12].cil.c</sourcefiles>
    <sourcefiles>test/programs/systemc/toy?_BUG.cil.c</sourcefiles>
    <sourcefiles>test/programs/systemc/transmitter*.cil.c</sourcefiles>
    <options>
      <option name="-setprop">output.disable=true</option>
      <option name="-config">test/config/explicitAnalysis-heuristics.properties</option>
      <option name="-setprop">ProgressObserverCPA.cpa.assumptions.progressobserver.heuristics=ReachedSizeHeuristics</option>
      <option name="-setprop">ReachedSizeHeuristics.threshold=5000</option>
      <option name="-heap">10000m</option>
    </options>
  </test>
  <columns>
    <column title="time">time for CPAchecker</column>
    <column title="reached">reached set</column>
    <column title="path length">size of a single path</column>
    <column title="branches">number of branches</column>
    <column title="infeasible counterexamples">Number of infeasible paths</column>
    <column title="cbmc time">Time for running CBMC</column>
  </columns>
</benchmark>
