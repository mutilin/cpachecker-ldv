<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="240" memlimit="3000">

  <rundefinition>
    <sourcefiles>
      <includesfile>../programs/benchmarks/Concurrency.set</includesfile>
      <includesfile>integration-ControlFlowInteger-abm.set</includesfile>
      <includesfile>integration-HeapManipulation-abm.set</includesfile>
      <includesfile>integration-SystemC-abm.set</includesfile>
      <includesfile>../programs/benchmarks/FeatureChecks.set</includesfile>
    </sourcefiles>
    <sourcefiles>
      <includesfile>integration-DeviceDrivers64.set</includesfile>
      <option name="-64"/>
    </sourcefiles>
    <option name="-noout"/>
    <option name="-predicateAnalysis-abm"/>
    <option name="-heap">2000M</option>
    <option name="-setprop">cpa.conditions.global.time.wall=1min</option>
  </rundefinition>

  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="cpa time">time for CPA algorithm</column>
  </columns>
</benchmark>
