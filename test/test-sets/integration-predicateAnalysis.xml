<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="240" memlimit="5000">

  <rundefinition>
    <sourcefiles>
      <includesfile>integration-ControlFlowInteger.set</includesfile>
      <includesfile>../programs/benchmarks/FeatureChecks.set</includesfile>
      <includesfile>../programs/benchmarks/HeapManipulation.set</includesfile>
      <includesfile>../programs/benchmarks/Loops.set</includesfile>
      <includesfile>integration-SystemC.set</includesfile>
    </sourcefiles>
    <sourcefiles>
      <includesfile>integration-DeviceDrivers64.set</includesfile>
      <option name="-64"/>
    </sourcefiles>
    <sourcefiles>
      <includesfile>../programs/simple/simple.set</includesfile>
      <option name="-setprop">cpa.predicate.ignoreCasts=false</option>
      <option name="-setprop">cpa.predicate.replaceBitvectorWithRationalAndFunctionTheory=false</option>
    </sourcefiles>
    <option name="-noout"/>
    <option name="-predicateAnalysis"/>
    <option name="-heap">2000M</option>
    <option name="-setprop">cpa.conditions.global.time.wall=1min</option>
  </rundefinition>

  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="cpa time">time for CPA algorithm</column>
  </columns>
</benchmark>
