<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="900" memlimit="14000">
  <option name="-noout"/>
  <option name="-heap">4000m</option>

  <test name="lbe-tests">
    <sourcefiles>
      <include>test/programs/benchmarks/systemc/token_ring*.cil.c</include>
      <include>test/programs/benchmarks/systemc/mem_slave_tlm.*.cil.c</include>
      <include>test/programs/benchmarks/systemc/toy.cil.c</include>
    </sourcefiles>
    <option name="-predicateAnalysis-lbe-cbmc"/>
  </test>

  <test name="explicit-tests">
    <sourcefiles>
      <include>test/programs/benchmarks/systemc/token_ring*.cil.c</include>
      <include>test/programs/benchmarks/systemc/mem_slave_tlm.*.cil.c</include>
      <include>test/programs/benchmarks/systemc/toy.cil.c</include>
    </sourcefiles>
    <option name="-explicitAnalysis"/>
  </test>

  <test name="restart-with-automaton-tests">
    <sourcefiles>
      <include>test/programs/benchmarks/systemc/token_ring*.cil.c</include>
      <include>test/programs/benchmarks/systemc/mem_slave_tlm.*.cil.c</include>
      <include>test/programs/benchmarks/systemc/toy.cil.c</include>
    </sourcefiles>
    <option name="-config">test/assumptions/assumptionAutomaton.properties</option>
  </test>
  <columns>
    <column title="total">time for CPAchecker</column>
  </columns>
</benchmark>
