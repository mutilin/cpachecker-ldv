<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="1800" memlimit="2000">
  <option name="-noout"/>
  <option name="-heap">1200M</option>

  <sourcefiles name="ControlFlowInteger-MemPrecise">
    <includesfile>../programs/benchmarks/ControlFlowInteger-MemPrecise.set</includesfile>
  </sourcefiles>
  <sourcefiles name="ControlFlowInteger-MemSimple">
    <includesfile>../programs/benchmarks/ControlFlowInteger-MemSimple.set</includesfile>
  </sourcefiles>
  <sourcefiles name="SystemC">
    <includesfile>../programs/benchmarks/SystemC.set</includesfile>
  </sourcefiles>
  <sourcefiles name="Nested">
    <includesfile>nested.set</includesfile>
  </sourcefiles>

  <test name="without-cbmc">
    <option name="-explicitAnalysis-no-cbmc"/>
  </test>

  <test name="with-cbmc">
    <option name="-explicitAnalysis"/>
  </test>

  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="reached">reached set</column>
    <column title="memory">Heap memory usage</column>
  </columns>
</benchmark>
