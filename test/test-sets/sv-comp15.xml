<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="900" memlimit="15000" cpuCores="4">
  <option name="-disable-java-assertions"/>
  <option name="-heap">10000M</option>

  <propertyfile>${sourcefile_path}/ALL.prp</propertyfile>

  <sourcefiles name="BitVectors">
    <includesfile>../programs/benchmarks/BitVectors*.set
  </sourcefiles>
  <sourcefiles name="ControlFlowInteger">
    <includesfile>../programs/benchmarks/ControlFlowInteger*.set
  </sourcefiles>
  <sourcefiles name="DeviceDrivers">
    <includesfile>../programs/benchmarks/DeviceDrivers64*.set
