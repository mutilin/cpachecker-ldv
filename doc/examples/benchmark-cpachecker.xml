<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<!-- Example file that demonstrates the use of CPAchecker. -->

<benchmark tool="cpachecker" timelimit="10" memlimit="2048">

  <test name="locks-lbe">
    <sourcefiles>
      <include>test/programs/locks/*.c</include>
    </sourcefiles>
    
    <options>
      <!-- Recommended option, as the CPAchecker output files are normally not interesting for benchmarks. -->
      <option name="-setprop">output.disable=true</option>
      
      <!-- Set the java heap size. -->
      <option name="-heap">1000m</option>
      
      <option name="-config">test/config/symbpredabsCPA-lbe.properties</option>
    </options>
    
  </test>

  <test>
    <sourcefiles>
      <include>test/programs/locks/*.c</include>
    </sourcefiles>
    
    <options>
      <!-- Recommended option, as the CPAchecker output files are normally not interesting for benchmarks. -->
      <option name="-setprop">output.disable=true</option>
      
      <!-- Set the java heap size. -->
      <option name="-heap">1000m</option>
      
      <option name="-config">test/config/symbpredabsCPA-lbe.properties</option>
    </options>
    
  </test>

  <!-- Example columns from CPAchecker output -->
  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="reached">reached set</column>
  </columns>
</benchmark>
