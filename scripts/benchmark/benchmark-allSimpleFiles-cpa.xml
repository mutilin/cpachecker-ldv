<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="100" memlimit="2048">

  <test name="b-files">
    <sourcefiles>test/programs/simple/b*.cil.c</sourcefiles>
    <options>
      <option name="-heap">100m</option>
      <option name="-setprop">output.disable=true</option>
      <option name="-config">test/config/symbpredabsCPA.properties</option>
    </options>
  </test>
  
  <test>
    <sourcefiles>test/programs/simple/c*.cil.c</sourcefiles>
    <options>
      <option name="-setprop">output.disable=true</option>
      <option name="-heap">100m</option>
      <option name="-config">test/config/symbpredabsCPA.properties</option>
    </options>
  </test>

  <test name="l-files">
    <sourcefiles>test/programs/simple/l*.cil.c</sourcefiles>
    <options>
      <option name="-setprop">output.disable=true</option>
      <option name="-config">test/config/concreteAnalysis.properties</option>
      <option name="-heap">100m</option>
    </options>
  </test>

  <columns>
    <column title="total" digitsBehindComma="2">time for CPAchecker</column>
    <column title="reached">reached set</column>
    <column title="refinements">Number of refinements</column>
    <column title="abstractions">Number of abstractions</column>
    <column title="blocksize">block size</column>
  </columns>

</benchmark>
