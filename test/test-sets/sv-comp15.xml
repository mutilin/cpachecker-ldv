  </sourcefiles>
  <sourcefiles name="DriverChallenges">
    <includesfile>../programs/benchmarks/DriverChallenges.set
    <option name="-64"/>
  </sourcefiles>
  <sourcefiles name="ECA">
    <includesfile>../programs/benchmarks/ECA.set
  </sourcefiles>
  <sourcefiles name="Floats">
    <includesfile>../programs/benchmarks/Floats.set
  </sourcefiles>
  <sourcefiles name="HeapManipulation">
    <includesfile>../programs/benchmarks/HeapManipulation*.set
  </sourcefiles>
  <sourcefiles name="Loops">
    <includesfile>../programs/benchmarks/Loops*.set
  </sourcefiles>
  <sourcefiles name="ProductLines">
    <includesfile>../programs/benchmarks/ProductLines*.set
  </sourcefiles>
  <sourcefiles name="Sequentialized">
    <includesfile>../programs/benchmarks/Sequentialized*.set
  </sourcefiles>
  <sourcefiles name="Simple">
    <includesfile>../programs/benchmarks/Simple*.set
  </sourcefiles>
  <sourcefiles name="Stateful">
    <includesfile>../programs/benchmarks/Stateful.set
  </sourcefiles>

