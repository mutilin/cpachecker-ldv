<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="180" memlimit="14000">
  <option name="-noout"/>
  <option name="-heap">12000m</option>

  <test name="uninitvars">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions-uninitvars.set</includesfile>
    </sourcefiles>
    <option name="-uninitVars-heuristics"/>
  </test>
  <test name="uninitvars-pl">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions-uninitvars.set</includesfile>
    </sourcefiles>
    <option name="-config">test/assumptions/uninitvars-adjustableConditions.properties</option>
    <option name="-setprop">cpa.assumptions.progressobserver.heuristics=PathLengthHeuristics,TimeOutHeuristics</option>
  </test>
  <test name="uninitvars-rip">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions-uninitvars.set</includesfile>
    </sourcefiles>
    <option name="-config">test/assumptions/uninitvars-adjustableConditions.properties</option>
    <option name="-setprop">cpa.assumptions.progressobserver.heuristics=RepetitionsInPathHeuristics,TimeOutHeuristics</option>
  </test>
  <test name="uninitvars-ae">
    <sourcefiles>
      <includesfile>test/assumptions/adjustableConditions-uninitvars.set</includesfile>
    </sourcefiles>
    <option name="-config">test/assumptions/uninitvars-adjustableConditions.properties</option>
    <option name="-setprop">cpa.assumptions.progressobserver.heuristics=AssumeEdgesInPathHeuristics,TimeOutHeuristics</option>
  </test>
  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="uninit">No of uninitialized vars</column>
    <column title="threshold">Threshold value</column>
  </columns>
</benchmark>
